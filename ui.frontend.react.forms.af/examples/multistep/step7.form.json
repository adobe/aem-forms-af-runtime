{
    "adaptiveform": "0.10.0",
    "items": [
        {
            "name": "topPanel",
            "label": {
                "value": "Welcome"
            },
            ":type" : "custom:vertical-tab",
            "items": [
                {
                    "fieldType": "panel",
                    "label": {
                        "value": " Identify Yourself"
                    },
                    "name": "identifyYourself",
                    "events": {
                        "custom:activateOTP": "{visible : false()}"
                    },
                    "items": [
                        {
                            "name": "mobileNumber",
                            "fieldType": "text-input",
                            "type": "string",
                            "required": true,
                            "description": "You do not need to add +91 - Share your 10 digit mobile number.\n We will be sending you an OTP to this number have it handy.",
                            "label": {
                                "value": "Please share your registered mobile number"
                            }
                        },
                        {
                            "name": "creditCardEndingNumber",
                            "fieldType": "text-input",
                            "type": "string",
                            "required": true,
                            "description": "We will need your credit card number to check your eligibility",
                            "label": {
                                "value": "Share last 4 digits of your credit card number"
                            }
                        },
                        {
                            "name": "viewEligibilityButton",
                            "fieldType": "button",
                            "label": {
                                "value": "View Loan Eligibility"
                            },
                            "events": {
                                "click": "if(length(validate($parent)) == 0, dispatchEvent('custom:activateOTP'), {})"
                            }
                        }
                    ]
                },
                {
                    "name": "verifyOtp",
                    "label": {
                        "value": "Verify OTP"
                    },
                    "visible" : false,
                    "events": {
                        "custom:activateOTP": "{visible : true()}",
                        "custom:success_otp" : "{visible : false()}"
                     },
                    "items": [
                        {
                            "name": "identifyOtpValue",
                            "fieldType": "text-input",
                            "type": "string",
                            "pattern": "[0-9]{5}",
                            "constraintMessages": {
                                "validationExpression": "Incorrect OTP"
                            },
                            "required": true,
                            "label": {
                                "value": "Please enter OTP to authenticate"
                            }
                        },
                        {
                            "name": "viewEligibilityConfirmButton",
                            "fieldType": "button",
                            "label": {
                                "value": "Authenticate"
                            },
                            "rules": {
                                "visible": "length(identifyOtpValue) > 0"
                            },
                            "events": {
                                "click": "request('https://arnjainfunctions.azurewebsites.net/api/otp?mobile_number=' &  $form.topPanel.identifyYourself.mobileNumber.$value & '&otp=' & identifyOtpValue.$value, 'POST', {}, 'success_otp', 'failure_otp')"
                            }
                        }
                    ],
                    "fieldType": "panel"
                },
                {
                    "name": "loanDetails",
                    "fieldType": "panel",
                    "type": "object",
                    "label": {
                      "value": "Loan Details"
                    },
                    "visible" : false,
                    "events": {
                        "custom:success_otp" : "{visible : true()}"
                     },
                    "items": [
                      {
                        "name": "amount",
                        "fieldType": "text-input",
                        "required": true,
                        "default": 600000,
                        "constraintMessages": {
                          "minimum": "Loan amount cannot be less than minimum",
                          "maximum": "Loan amount cannot exceed the maximum limit"
                        },
                        "description": "It doesn't block your credit limit",
                        "label": {
                          "value": "Choose Loan Amount"
                        }
                      },
                      {
                        "name": "duration",
                        "fieldType": "text-input",
                        "default": 12,
                        "description": "Longer duration = Lower EMI",
                        "label": {
                          "value": "Choose Loan Duration in Months"
                        }
                      },
                      {
                        "name": "emi",
                        "fieldType": "text-input",
                        "type": "string",
                        "readOnly": true,
                        "label": {
                          "value": "Monthly EMI"
                        },
                        "rules": {
                          "value": "toString( amount.$value * rateOfInterest.$value / 1200 * power(1 + rateOfInterest.$value / 1200, duration.$value) / (power(1 + rateOfInterest.$value / 1200, duration.$value) - 1))"
                        }
                      },
                      {
                        "name": "rateOfInterest",
                        "fieldType": "text-input",
                        ":type": "custom:text",
                        "type": "string",
                        "readOnly": true,
                        "label": {
                          "value": "Rate of Interest"
                        },
                        "rules": {
                          "value": "8"
                        }
                      }
                    ]
                }
            ],
            "fieldType": "panel"
        }        
    ]
}